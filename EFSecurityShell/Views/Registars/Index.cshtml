@model IEnumerable<TeamComeback_V2.Models.Registar>

@{
    ViewBag.Title = "Index";
}

<h2>Enrollments</h2>

<p>
    @Html.ActionLink("Enroll in a Course", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Member.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attendance)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Course.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Member.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EnrollmentDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Attendance)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RegistarID }) |
        @Html.ActionLink("Details", "Details", new { id = item.RegistarID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.RegistarID })
    </td>
</tr>
}

</table>
